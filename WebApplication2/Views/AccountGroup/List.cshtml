@model IEnumerable<WebApplication2.Models.AccountGroup>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Account Groups</h2>

<p>
    @Html.ActionLink("Create New Group", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccessibleCategories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.getAccessibleCategoryListRepresentation()
                </td>
                <td>
                    @if (@item.isDefaultGroup)
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.AccountGroupID })
                    }
                    else
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.AccountGroupID }) <br />
                        @Html.ActionLink("Delete", "Delete", new { id = item.AccountGroupID })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


@Html.Partial("CDataTable")