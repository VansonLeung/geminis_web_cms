@using WebApplication2.Helpers
@model IEnumerable<WebApplication2.Models.Article>

@{
    ViewBag.Title = "ListArticlesApproved";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Articles to Publish</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseArticleID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.approvalRemarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isPublished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datePublished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.created_at)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.modified_at)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.createdBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.approvedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.publishedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.category != null)
                {
                        @item.category.GetName(null)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Version)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseArticleID)
                </td>
                <td>
                    <span style="white-space: pre-line">@DateTimeExtensions.DateTimeToStringBR(item.dateApproved)</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.approvalRemarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isPublished)
                </td>
                <td>
                    <span style="white-space: pre-line">@DateTimeExtensions.DateTimeToStringBR(item.datePublished)</span>
                </td>
                <td>
                    <span style="white-space: pre-line">@DateTimeExtensions.DateTimeToStringBR(item.created_at)</span>
                </td>
                <td>
                    <span style="white-space: pre-line">@DateTimeExtensions.DateTimeToStringBR(item.modified_at)</span>
                </td>
                <td>
                    @if (item.createdByAccount != null)
                {
                        @item.createdByAccount.Username
                    }
                </td>
                <td>
                    @if (item.approvedByAccount != null)
                {
                        @item.approvedByAccount.Username
                    }
                </td>
                <td>
                    @if (item.publishedByAccount != null)
                {
                        @item.publishedByAccount.Username
                    }
                </td>
                <td>
                    @Html.ActionLink("Version History", "ListArticleVersions", new { baseArticleID = item.BaseArticleID })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("CDataTable")