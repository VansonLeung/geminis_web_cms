@model IEnumerable<WebApplication2.Models.Constant>
@using WebApplication2.Security
@using WebApplication2.Context


@{
    ViewBag.Title = "Constants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Constants</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Key)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            <tr>
                @if (SessionPersister.account.Role != null && SessionPersister.account.Role.Contains("superadmin"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ConstantID })<br />
                        @Html.ActionLink("Details", "Details", new { id = item.ConstantID })<br />
                        @Html.ActionLink("Delete", "Delete", new { id = item.ConstantID })
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.Key)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Desc)
                </td>
            </tr>
        }
    </tbody>

</table>

@Html.Partial("CDataTable")