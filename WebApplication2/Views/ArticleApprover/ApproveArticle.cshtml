@model WebApplication2.Models.Article

@{
    ViewBag.Title = "ApproveArticle";
    Layout = "~/Views/ArticleApprover/ArticleDetailsChrome.cshtml";
}

<h2>Article Approval</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @if (Model.isApproved)
        {
            <h4>Already Approved</h4>
        }
        else if (Model.isUnapproved)
        {
            <h4>Already Unapproved</h4>
        }
        else
        {
            <h4>Approve this article?</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ArticleID)
            @Html.HiddenFor(model => model.Version)
            @Html.HiddenFor(model => model.Lang)
            @Html.HiddenFor(model => model.BaseArticleID)

            <div class="form-group">
                @Html.LabelFor(model => model.approvalRemarks, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.approvalRemarks, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.approvalRemarks, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
}
