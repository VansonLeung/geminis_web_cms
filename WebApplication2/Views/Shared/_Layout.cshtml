@using WebApplication2.Security

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GSL CMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
    CKEDITOR_BASEPATH = "@Url.Content("~/Content/ckeditor/")";
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/ckeditor")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GSL CMS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (SessionPersister.account != null)
                    {
                        <li>
                            <a>@SessionPersister.account.Firstname @SessionPersister.account.Lastname (@SessionPersister.account.Role)</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Logout", "Account")">Logout</a>
                        </li>

                        if (SessionPersister.account.Role.Contains("editor"))
                        {
                            <li>@Html.ActionLink("Home", "Index", "Account")</li>
                            <li>@Html.ActionLink("My Account", "Me", "Account")</li>
                            <li>@Html.ActionLink("Change Password", "ChangePassword", "Account")</li>
                            <li>@Html.ActionLink("Articles", "List", "ArticleEditor")</li>
                            <li>@Html.ActionLink("Content Pages", "List", "ContentPageEditor")</li>
                        }
                        else if (SessionPersister.account.Role.Contains("approver"))
                        {
                            <li>@Html.ActionLink("Home", "Index", "Account")</li>
                            <li>@Html.ActionLink("My Account", "Me", "Account")</li>
                            <li>@Html.ActionLink("Change Password", "ChangePassword", "Account")</li>
                            <li>@Html.ActionLink("Articles to Approve", "List", "ArticleApprover")</li>
                        }
                        else if (SessionPersister.account.Role.Contains("publisher"))
                        {
                            <li>@Html.ActionLink("Home", "Index", "Account")</li>
                            <li>@Html.ActionLink("My Account", "Me", "Account")</li>
                            <li>@Html.ActionLink("Change Password", "ChangePassword", "Account")</li>
                            <li>@Html.ActionLink("Available Articles", "ListArticlesApproved", "ArticlePublisher")</li>
                            <li>@Html.ActionLink("Published Articles", "ListArticlesPublished", "ArticlePublisher")</li>
                        }
                        else if (SessionPersister.account.Role.Contains("superadmin"))
                        {
                            <li>@Html.ActionLink("Home", "Index", "Account")</li>
                            <li>@Html.ActionLink("Register New CMS Account", "Register", "Account")</li>
                            <li>@Html.ActionLink("Account Groups", "List", "AccountGroup")</li>
                            <li>@Html.ActionLink("Account List", "List", "Account")</li>
                            <li>@Html.ActionLink("Categories", "List", "InfrastructureCategory")</li>
                            <li>@Html.ActionLink("Maintenance", "Index", "SystemMaintenanceNotification")</li>
                        }

                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Register New CMS Account", "Register", "Account")</li>
                    }

              </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
            @if (SessionPersister.account != null)
            {
                <div>
                    @if (SessionPersister.account.Role.Contains("superadmin"))
                {
                        <span>Articles - </span>
                        <span>@Html.ActionLink("Articles", "List", "ArticleEditor")</span>
                        <span>@Html.ActionLink("Articles Pending for Approval", "List", "ArticleApprover")</span>
                        <span>@Html.ActionLink("Approved Articles", "ListArticlesApproved", "ArticlePublisher")</span>
                        <span>@Html.ActionLink("Published Articles", "ListArticlesPublished", "ArticlePublisher")</span>
                    }
                </div>
                <div>
                    @if (SessionPersister.account.Role.Contains("superadmin"))
                {
                        <span>Content Pages - </span>
                        <span>@Html.ActionLink("Content Pages", "List", "ContentPageEditor")</span>
                    }
                </div>
            }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GSL CMS</p>
        </footer>
    </div>
</body>
</html>
