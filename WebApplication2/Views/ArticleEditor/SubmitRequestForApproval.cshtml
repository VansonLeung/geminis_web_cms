@model WebApplication2.Models.Article

@{
    ViewBag.Title = "SubmitRequestForApproval";
    Layout = "~/Views/ArticleEditor/ArticleEditChrome.cshtml";
}

<h2>SubmitRequestForApproval</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @if (Model.isRequestingApproval)
        {
            <h4>Already Submitted for Approval</h4>
        }
        else
        {
            <h4>Submit Request for Approval?</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ArticleID)
            @Html.HiddenFor(model => model.Version)
            @Html.HiddenFor(model => model.Lang)
            @Html.HiddenFor(model => model.BaseArticleID)

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Yes" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
}