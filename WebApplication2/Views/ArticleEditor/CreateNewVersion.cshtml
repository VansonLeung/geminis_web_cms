@model WebApplication2.Models.Article

@{
    ViewBag.Title = "CreateNewVersion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateNewVersion</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Are you sure to create a new version of this article?</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Version)
        @Html.HiddenFor(model => model.BaseArticleID)

        @Html.DisplayFor(model => model.Name)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<script type="text/javascript">
    CKEDITOR.replace('Desc', {
        filebrowserImageBrowseUrl: '/image/UploadPartial',
        filebrowserImageUploadUrl: '/image/UploadNow'
    });

    function updateValue(id, value) {
        var dialog = CKEDITOR.dialog.getCurrent();
        dialog.setValueOf('info', 'txtUrl', value);
    }
</script>

<div>
    @Html.ActionLink("Back to List", "List")
</div>
