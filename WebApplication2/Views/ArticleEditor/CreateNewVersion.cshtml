@model WebApplication2.Models.Article

@{
    ViewBag.Title = "CreateNewVersion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Are you sure you want to create a new version of this Article?</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Version)
        @Html.HiddenFor(model => model.BaseArticleID)
        @Html.HiddenFor(model => model.Lang)


        @Html.DisplayFor(model => model.Name)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Articles", "List")
</div>
