
<section class='top'>
    <div class='footer'>
        <div class='white-space'>
            <div class='gem_form nobg zeromarginpadding' style='position:relative; overflow: visible;'>
                <div class='row'>
                    @for (var i = 0; i < Model.footerMenu.Count; i++)
                    {
                        var menuItem = Model.footerMenu[i];

                        <div class='col s12 m4'>
                            <a href="@menuItem.link.GetFullURL()">@menuItem.name</a>
                        </div>
                    }
                    <div class='col s12 m4'>
                        <a href="/@Model.lang.locale/home/sitemap">@Model.globalData.lbl_sitemap</a>
                    </div>
                </div>
                <style>
                    /*
                    #comm100-float-button-2 {
                        width: 72px !important;
