@model WebApplication2.ViewModels.Include.BaseViewModel

@{
    ViewBag.Title = "Home Page";
}
@Html.Partial("_Header", Model)


<section class='front'>

    <div class='gem_form shortbottom'>
        <div class='row'>
            <div class='col s12 m8'>
                <div class="landingpage_banner">
                    <table style="height: 100%">
                        <tr>
                            <td>
                                <div>
                                    <img src="/images/index/banner_txt.png" style="width: 100%; max-width: 560px" />
                                    <div style="height: 2px; width: 60%; max-width: 406px; background-color: #fff"></div>
                                    <br />
                                    <table class='generic-table-form font_lg' style="width: auto !important;">
                                        <tr>
                                            <td class='font_sm'><div class='generic-button-big gb-primary font_lg'>儲存</div></td>
                                            <td class='font_sm'><div class='generic-button-big gb-white-red font_lg'>重設</div></td>
                                        </tr>
                                    </table>
                                </div>
                            </td>
                            <td style="width: 228px;">
                                <ul class="landingpage_banner_button">
                                    @for (var i = 0; i < Model.jumbotronMenu.Count; i++)
                                    {
                                        var menuItem = Model.jumbotronMenu[i];
    
                                        <li><a style='color: #fff' href="@menuItem.link.GetFullURL()">@menuItem.name</a><p class="arrow"></p></li>
                                    }      
                                </ul>
                            </td>
                        </tr>
                    </table>
                </div>
                <br />
                <div class="landingpage_shortcut">
                    <table>
                        <tr>
                            @for (var i = 0; i < Model.shortcutMenu.Count; i++)
                            {
                                var menuItem = Model.shortcutMenu[i];

                                <td>
                                    <a href="@menuItem.link.GetFullURL()">@menuItem.name</a>
                                </td>
                            }      
                        </tr>
                    </table>
                </div>
            </div>

            <div class='col s12 m4'>
                <iframe class='if-flexible' id='i7' src='/html/stock_quoter.html' frameborder="0" scrolling="no"></iframe>
            </div>

        </div>
    </div>

    <script type="text/javascript">
            $('.landingpage_banner_button').find('li').on('mouseover', function (e) {
                var target = $(e.target).closest('li');
                var siblings = target.siblings('li');
                siblings.removeClass('active');
                target.addClass('active');
            })
    </script>

    <div class='row'>
        <div class='col s12 m12'>
            @Html.RazorEncode(HttpUtility.HtmlDecode(Model.content.desc), Model)
        </div>
    </div>

</section>

@Html.Partial("_Footer", Model)

